{
  "name": "presentation",
  "private": true,
  "repository": {
    "url": "https://github.com/iTwin/presentation.git"
  },
  "scripts": {
    "start:web": "run-p --silent start:frontend start:web-backend",
    "start:electron": "run-p --silent start:frontend start:electron-backend",
    "start:frontend": "npm run start --prefix ./apps/test-app/frontend",
    "start:web-backend": "npm run start --prefix ./apps/test-app/backend",
    "start:electron-backend": "npm run start:electron --prefix ./apps/test-app/backend",
    "build:all": "lage build --grouped",
    "build:test-app": "lage build --grouped --to @test-app/*",
    "clean:all": "npm run -s clean-docs && lage clean",
    "clean-docs": "rimraf build",
    "generate-docs": "lage docs --grouped",
    "cover:all": "lage cover --grouped --continue",
    "lint:all": "lage lint --grouped --continue",
    "lint:copyright": "node scripts/copyrightLinter.js",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "prepare": "husky install",
    "change": "beachball change",
    "check": "beachball check",
    "version-bump": "beachball bump",
    "version-bump-dev": "beachball bump --config beachball.config.dev.js --keep-change-files",
    "publish-packages": "beachball publish",
    "publish-packages-dev": "beachball publish --config beachball.config.dev.js --keep-change-files"
  },
  "dependencies": {
    "beachball": "^2.36.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^8.10.0",
    "fast-glob": "^3.3.1",
    "husky": "^8.0.3",
    "lage": "^1.9.6",
    "lint-staged": "^13.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "yargs": "~17.6.2"
  },
  "lint-staged": {
    "./{apps, packages}/**/*.{tsx,ts,jsx,js,scss,css,html}": [
      "pnpm lint:copyright --fix"
    ],
    "./scripts/*.js": [
      "pnpm lint:copyright --fix"
    ]
  },
  "engines": {
    "pnpm": ">=8",
    "npm": "<0",
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "semver@>=7.0.0 <7.5.2": "^7.5.4",
      "semver@>=6.0.0 <6.3.1": "^6.3.1",
      "semver@>=5.0.0 <5.7.2": "^5.7.2",
      "xml2js@<0.5.0": "0.5.0"
    }
  }
}
