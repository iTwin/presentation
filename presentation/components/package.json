{
  "name": "@bentley/presentation-components",
  "version": "2.0.0-dev.48",
  "description": "React components based on iModel.js Presentation library",
  "main": "lib/presentation-components.js",
  "typings": "lib/presentation-components",
  "imodeljsSharedLibrary": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imodeljs/imodeljs/tree/master/presentation/components"
  },
  "keywords": [
    "Bentley",
    "EC",
    "Presentation",
    "iModelJS",
    "Frontend",
    "React",
    "Component"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "scripts": {
    "build": "npm run extract && buildIModelJsModule",
    "build:watch": "tsc -w",
    "clean": "rimraf lib .rush package-deps.json",
    "cover": "nyc npm test",
    "docs": "npm run docs:reference && npm run docs:changelog",
    "docs:changelog": "cpx \"./CHANGELOG.md\" ../../generated-docs/presentation/presentation-components",
    "docs:reference": "node ./node_modules/@bentley/build-tools/scripts/docs.js --includes=../../generated-docs/extract --json=../../generated-docs/presentation/presentation-components/file.json --tsIndexFile=presentation-components.ts --onlyJson %TYPEDOC_THEME%  --excludeGlob=**/presentation-components.ts",
    "extract": "node ./node_modules/@bentley/build-tools/scripts/extract.js --fileExt=ts --extractFrom=./src/test --recursive --out=../../generated-docs/extract",
    "extract-api": "node ./node_modules/@bentley/build-tools/scripts/extract-api.js --entry=presentation-components",
    "lint": "npm run tslint && npm run eslint",
    "eslint": "eslint src --ext .ts,.tsx,.js,.jsx",
    "tslint": "tslint --project . 1>&2",
    "test": "mocha --opts ../mocha.opts -r ignore-styles -r jsdom-global/register --file ./lib/test/index.test.js \"./lib/test/**/*.test.js\"",
    "test:watch": "npm test -- --reporter min --watch-extensions ts,tsx --watch"
  },
  "iModelJs": {
    "buildModule": {
      "type": "system",
      "sourceResources": [
        {
          "source": "./src/**/*.json",
          "dest": "./lib"
        },
        {
          "source": "./src/**/*.scss",
          "dest": "./lib"
        },
        {
          "source": "./public/**/*",
          "dest": "./lib/public"
        }
      ],
      "webpack": {
        "dest": "./lib/module",
        "entry": "./lib/presentation-components.js",
        "bundleName": "presentation-components",
        "styleSheets": true
      },
      "pseudoLocalize": {
        "source": "./lib/public/locales/en",
        "dest": "./lib/public/locales/en-PSEUDO"
      }
    }
  },
  "dependencies": {
    "lodash": "^4.17.10",
    "micro-memoize": "^4.0.9",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "rxjs": "^6.5.2"
  },
  "peerDependencies": {
    "@bentley/bentleyjs-core": "^2.0.0-dev.48",
    "@bentley/imodeljs-i18n": "^2.0.0-dev.48",
    "@bentley/imodeljs-common": "^2.0.0-dev.48",
    "@bentley/imodeljs-frontend": "^2.0.0-dev.48",
    "@bentley/presentation-common": "^2.0.0-dev.48",
    "@bentley/presentation-frontend": "^2.0.0-dev.48",
    "@bentley/ui-core": "^2.0.0-dev.48",
    "@bentley/ui-components": "^2.0.0-dev.48",
    "@bentley/ui-abstract": "2.0.0-dev.48"
  },
  "devDependencies": {
    "@bentley/bentleyjs-core": "2.0.0-dev.48",
    "@bentley/build-tools": "2.0.0-dev.48",
    "@bentley/imodeljs-i18n": "2.0.0-dev.48",
    "@bentley/imodeljs-common": "2.0.0-dev.48",
    "@bentley/imodeljs-frontend": "2.0.0-dev.48",
    "@bentley/presentation-common": "2.0.0-dev.48",
    "@bentley/presentation-frontend": "2.0.0-dev.48",
    "@bentley/ui-core": "2.0.0-dev.48",
    "@bentley/ui-components": "2.0.0-dev.48",
    "@bentley/webpack-tools": "2.0.0-dev.48",
    "@bentley/ui-abstract": "2.0.0-dev.48",
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7",
    "@types/chai-jest-snapshot": "^1.3.0",
    "@types/enzyme": "3.9.3",
    "@types/faker": "^4.1.0",
    "@types/lodash": "^4.14.0",
    "@types/mocha": "^5.2.5",
    "@types/react": "^16.8.0",
    "@types/react-dom": "^16.8.0",
    "@types/testing-library__react-hooks": "^3.1.0",
    "@types/sinon": "^7.5.1",
    "@types/sinon-chai": "^3.2.0",
    "@typescript-eslint/parser": "2.22.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7",
    "chai-jest-snapshot": "^2.0.0",
    "cpx": "^1.5.0",
    "cross-env": "^5.1.4",
    "enzyme": "^3.4.0",
    "enzyme-adapter-react-16": "1.12.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^6.7.2",
    "eslint-plugin-react-hooks": "^2.3.0",
    "faker": "^4.1.0",
    "ignore-styles": "^5.0.1",
    "mocha": "^5.2.0",
    "nyc": "^14.0.0",
    "@testing-library/react-hooks": "^3.2.1",
    "rimraf": "^3.0.2",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.2.0",
    "tslint": "^5.11.0",
    "tslint-etc": "^1.5.2",
    "typemoq": "^2.1.0",
    "typescript": "~3.7.4",
    "xmlhttprequest": "^1.8.0"
  },
  "nyc": {
    "extends": "./node_modules/@bentley/build-tools/.nycrc",
    "check-coverage": true,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "lines": 100,
    "require": [
      "source-map-support/register",
      "ts-node/register",
      "ignore-styles",
      "jsdom-global/register"
    ]
  }
}
