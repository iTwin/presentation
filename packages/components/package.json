{
  "name": "@itwin/presentation-components",
  "version": "4.4.0",
  "description": "React components based on iTwin.js Presentation library",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/presentation.git",
    "directory": "packages/components"
  },
  "keywords": [
    "Bentley",
    "EC",
    "Presentation",
    "iTwin",
    "iTwin.js",
    "Frontend",
    "React",
    "Component"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "main": "lib/cjs/presentation-components.js",
  "module": "lib/esm/presentation-components.js",
  "types": "lib/cjs/presentation-components.d.ts",
  "scripts": {
    "build": "npm run -s copy:locale && npm run -s build:cjs && npm run -s build:esm",
    "build:cjs": "npm run -s copy:cjs && tsc -p tsconfig.cjs.json",
    "build:esm": "npm run -s copy:esm && tsc -p tsconfig.esm.json",
    "copy:locale": "cpx \"./public/**/*\" ./lib/public",
    "copy:cjs": "cpx \"./src/**/*.{scss,json}\" ./lib/cjs",
    "copy:esm": "cpx \"./src/**/*.{scss,json}\" ./lib/esm",
    "build:watch": "npm run -s build:cjs -- -w",
    "clean": "rimraf lib build",
    "cover": "nyc npm -s test",
    "lint": "eslint ./src/**/*.{ts,tsx}",
    "test": "mocha --config ./.mocharc.json \"./lib/cjs/test/**/*.test.js\"",
    "test:watch": "npm -s test -- --reporter min --watch-extensions ts,tsx --watch",
    "test:regression": "npm -s test",
    "docs": "npm run -s docs:extract && npm run -s docs:reference && npm run -s docs:changelog",
    "docs:changelog": "cpx ./CHANGELOG.md ./build/docs/reference/presentation-components",
    "docs:reference": "betools docs --includes=./build/docs/extract --json=./build/docs/reference/presentation-components/file.json --tsIndexFile=presentation-components.ts --onlyJson",
    "docs:extract": "betools extract --fileExt=ts,tsx --extractFrom=./src/test --recursive --out=./build/docs/extract",
    "extract-api": "betools extract-api --entry=presentation-components --apiReportFolder=./api --apiReportTempFolder=./api/temp --apiSummaryFolder=./api",
    "check-internal": ""
  },
  "dependencies": {
    "@itwin/itwinui-icons-react": "^2.4.0",
    "@itwin/itwinui-react": "^2.12.10",
    "@itwin/itwinui-variables": "^2.1.0",
    "classnames": "^2.3.2",
    "fast-deep-equal": "^3.1.3",
    "fast-sort": "^3.4.0",
    "micro-memoize": "^4.1.2",
    "react-select": "5.7.0",
    "react-select-async-paginate": "0.7.2",
    "rxjs": "^7.8.1"
  },
  "peerDependencies": {
    "@itwin/appui-abstract": "^3.6.3 || ^4.0.0",
    "@itwin/components-react": "^4.0.0",
    "@itwin/core-bentley": "^3.6.3 || ^4.0.0",
    "@itwin/core-common": "^3.6.3 || ^4.0.0",
    "@itwin/core-frontend": "^3.6.3 || ^4.0.0",
    "@itwin/core-react": "^4.0.0",
    "@itwin/imodel-components-react": "^4.0.0",
    "@itwin/presentation-common": "^3.6.3 || ^4.0.0",
    "@itwin/presentation-frontend": "^3.6.3 || ^4.0.0",
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@itwin/appui-abstract": "^4.1.1",
    "@itwin/build-tools": "^4.1.1",
    "@itwin/components-react": "^4.4.0",
    "@itwin/core-bentley": "^4.1.1",
    "@itwin/core-common": "^4.1.1",
    "@itwin/core-frontend": "^4.1.1",
    "@itwin/core-geometry": "^4.1.1",
    "@itwin/core-i18n": "^4.1.1",
    "@itwin/core-orbitgt": "^4.1.1",
    "@itwin/core-quantity": "^4.1.1",
    "@itwin/core-react": "^4.4.0",
    "@itwin/ecschema-metadata": "^4.1.1",
    "@itwin/eslint-plugin": "4.0.0-dev.48",
    "@itwin/imodel-components-react": "^4.4.0",
    "@itwin/presentation-common": "^4.1.1",
    "@itwin/presentation-frontend": "^4.1.1",
    "@itwin/webgl-compatibility": "^4.1.1",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/chai": "4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/chai-jest-snapshot": "^1.3.6",
    "@types/chai-subset": "1.3.1",
    "@types/jsdom": "21.1.1",
    "@types/mocha": "^10.0.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/sinon": "^10.0.16",
    "@types/sinon-chai": "^3.2.9",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "chai-jest-snapshot": "^2.0.0",
    "chai-subset": "1.6.0",
    "cpx2": "^3.0.2",
    "eslint": "^8.47.0",
    "eslint-plugin-react": "^7.33.2",
    "ignore-styles": "^5.0.1",
    "jsdom": "^22.1.0",
    "global-jsdom": "^9.1.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resize-observer-polyfill": "1.5.1",
    "rimraf": "^5.0.1",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
    "typemoq": "^2.1.0",
    "typescript": "~5.0.4"
  }
}
