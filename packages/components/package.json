{
  "name": "@itwin/presentation-components",
  "version": "4.0.0-dev",
  "description": "React components based on iTwin.js Presentation library",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/presentation/tree/master/packages/components"
  },
  "keywords": [
    "Bentley",
    "EC",
    "Presentation",
    "iTwin",
    "iTwin.js",
    "Frontend",
    "React",
    "Component"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "main": "lib/cjs/presentation-components.js",
  "module": "lib/esm/presentation-components.js",
  "types": "lib/cjs/presentation-components.d.ts",
  "scripts": {
    "build": "npm run -s copy:locale && npm run -s pseudolocalize && npm run -s build:cjs && npm run -s build:esm",
    "build:cjs": "npm run -s copy:cjs && tsc -p tsconfig.cjs.json",
    "build:esm": "npm run -s copy:esm && tsc -p tsconfig.esm.json",
    "copy:locale": "cpx \"./public/**/*\" ./lib/public",
    "copy:cjs": "cpx \"./src/**/*.{scss,json}\" ./lib/cjs",
    "copy:esm": "cpx \"./src/**/*.{scss,json}\" ./lib/esm",
    "build:watch": "npm run -s build:cjs -- -w",
    "clean": "rimraf lib",
    "cover": "nyc npm -s test",
    "lint": "eslint ./src/**/*.{ts,tsx}",
    "pseudolocalize": "betools pseudolocalize --englishDir ./lib/public/locales/en --out ./lib/public/locales/en-PSEUDO",
    "test": "mocha --config ./.mocharc.json \"./lib/cjs/test/**/*.test.js\"",
    "test:watch": "npm -s test -- --reporter min --watch-extensions ts,tsx --watch",
    "docs": "npm run -s docs:extract && npm run -s docs:reference && npm run -s docs:changelog",
    "docs:changelog": "cpx ./CHANGELOG.md ../../build/docs/reference/presentation-components",
    "docs:reference": "betools docs --includes=../../build/docs/extract --json=../../build/docs/reference/presentation-components/file.json --tsIndexFile=presentation-components.ts --onlyJson",
    "docs:extract": "betools extract --fileExt=ts,tsx --extractFrom=./src/test --recursive --out=../../build/docs/extract"
  },
  "dependencies": {
    "@itwin/itwinui-css": "0.x",
    "@itwin/itwinui-icons-react": "^1.8.0",
    "@itwin/itwinui-react": "~1.46.0",
    "classnames": "^2.3.1",
    "fast-deep-equal": "^3.1.3",
    "fast-sort": "^3.0.2",
    "micro-memoize": "^4.0.9",
    "react-select": "3.2.0",
    "react-select-async-paginate": "0.5.3",
    "rxjs": "^6.6.2"
  },
  "peerDependencies": {
    "@itwin/appui-abstract": "^3.6.0-dev.65",
    "@itwin/components-react": "^3.6.0-dev.65",
    "@itwin/core-bentley": "^3.6.0-dev.65",
    "@itwin/core-common": "^3.6.0-dev.65",
    "@itwin/core-frontend": "^3.6.0-dev.65",
    "@itwin/core-react": "^3.6.0-dev.65",
    "@itwin/imodel-components-react": "^3.6.0-dev.65",
    "@itwin/presentation-common": "^3.6.0-dev.65",
    "@itwin/presentation-frontend": "^3.6.0-dev.65",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@itwin/appui-abstract": "^3.6.0-dev.65",
    "@itwin/build-tools": "^3.6.0-dev.65",
    "@itwin/components-react": "^3.6.0-dev.65",
    "@itwin/core-bentley": "^3.6.0-dev.65",
    "@itwin/core-common": "^3.6.0-dev.65",
    "@itwin/core-frontend": "^3.6.0-dev.65",
    "@itwin/core-geometry": "^3.6.0-dev.65",
    "@itwin/core-i18n": "^3.6.0-dev.65",
    "@itwin/core-orbitgt": "^3.6.0-dev.65",
    "@itwin/core-quantity": "^3.6.0-dev.65",
    "@itwin/core-react": "^3.6.0-dev.65",
    "@itwin/eslint-plugin": "^3.6.0-dev.65",
    "@itwin/imodel-components-react": "^3.6.0-dev.65",
    "@itwin/presentation-common": "^3.6.0-dev.65",
    "@itwin/presentation-frontend": "^3.6.0-dev.65",
    "@itwin/webgl-compatibility": "^3.6.0-dev.65",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/chai": "4.3.1",
    "@types/chai-as-promised": "^7",
    "@types/chai-jest-snapshot": "^1.3.0",
    "@types/chai-subset": "1.3.1",
    "@types/mocha": "^8.2.2",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.0",
    "@types/react-select": "3.0.26",
    "@types/sinon": "^9.0.0",
    "@types/sinon-chai": "^3.2.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7",
    "chai-jest-snapshot": "^2.0.0",
    "chai-subset": "1.6.0",
    "cpx2": "^3.0.0",
    "cross-env": "^5.1.4",
    "eslint": "^7.11.0",
    "ignore-styles": "^5.0.1",
    "jsdom": "^19.0.0",
    "jsdom-global": "3.0.2",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.2.0",
    "typemoq": "^2.1.0",
    "typescript": "~4.4.0"
  }
}
